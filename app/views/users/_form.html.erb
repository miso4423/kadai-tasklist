<%= form_with(model: user, local: true) do |f| %>


  <% if user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% user.errors.full_messages.each do |tsk| %>
          <li><%= tsk %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>

  <%= f.label :status, "状態" %>
  <%= f.text_field :status %>

  <%= f.submit "記録" %>
<% end %>